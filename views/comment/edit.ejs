<%- include("../partials/header") %>

<div class="container">
   <h2 style="text-align: center; margin: 28px 0;">
    Edit Comments of <%=campgrounds.name%>
   </h2>
   <div class="forms">
      <form action="/campgrounds/<%=campgrounds._id%>/comments/<%=comment._id%>?_method=PUT" method="post">
         

         <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>" required>
         </div>
         
         <div class="form-group">
            <button type="submit" class="btn btn-lg btn btn-primary btn-block">
            Sumbit!
            </button>
         </div>
		</form>  
    </div>
</div>


