<%- include("partials/header")%>


<div class="container">
   <h2 style="text-align: center; margin: 28px 0;">
     Sign Up Here
   </h2>
   <div class="forms">
     <form action="/register" method="post">
         
		  <div class="form-group">
           <input class="form-control" type="text" name="username" placeholder="Username">
         </div>
		  
		 <div class="form-group">
            <input class="form-control"  type="password" name="password" placeholder="Password">
         </div>
         
    
         <div class="form-group">
            <button type="submit" class="btn btn-lg btn btn-success btn-block">
              Sign Up
            </button>
         </div>
          <p>
			Already have a account? <a href="/login"> Log In here!</a>
		  </p>
   </form>
</div>
</div>

